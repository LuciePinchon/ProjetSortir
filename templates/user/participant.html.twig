{% extends 'base.html.twig' %}

{% block title %}
    Profil de {{ participant.pseudo }}
{% endblock %}

{% block body %}
    <article class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>Participant</h1>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <img src="{{ asset('img/photoProfil/' ~ participant.picture) }}" alt="Photo de profil" class="img-thumbnail mb-3">
                            </div>
                            <div class="col-md-8">
                                <h2 class="card-title text-center">{{ participant.pseudo }}</h2>
                                <p class="card-text"><strong>Prénom :</strong> {{ participant.firstName }}</p>
                                <p class="card-text"><strong>Nom :</strong> {{ participant.lastName }}</p>
                                <p class="card-text"><strong>Téléphone :</strong> {{ participant.phoneNumber }}</p>
                                <p class="card-text"><strong>Email :</strong> {{ participant.email }}</p>
                                <p class="card-text"><strong>Campus :</strong> {{ participant.campus.name }}</p>
                                <a href="{{ path('main_home') }}" class="btn btn-outline-secondary mt-3 d-block">Retour</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
{% endblock %}
