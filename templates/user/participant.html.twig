{% extends 'base.html.twig' %}

{% block title %}
    Profil de {{ participant.pseudo }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body text-center">
                        <h2 class="card-title">{{ participant.pseudo }}</h2>
                        <img src="{{ asset('img/photoProfil/' ~ participant.picture) }}" alt="Photo de profil" class="img-thumbnail mb-4 profil_pic">

                        <p class="card-text">Prénom : {{ participant.firstName }}</p>
                        <p class="card-text">Nom : {{ participant.lastName }}</p>
                        <p class="card-text">Téléphone : {{ participant.phoneNumber }}</p>
                        <p class="card-text">Email : {{ participant.email }}</p>
                        <p class="card-text">Campus : {{ participant.campus.name }}</p>

                        <a href="{{ path('main_home') }}" class="btn btn-outline-secondary mt-3">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
