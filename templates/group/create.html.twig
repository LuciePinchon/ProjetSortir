{% extends 'base.html.twig' %}

{% block title %}Cr√©er un groupe{% endblock %}

{% block body %}
    <section class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">Ajouter un groupe</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(groupForm, {'attr': {'class': 'form'}}) }}
                        <div class="row align-items-center">
                            <div class="col-md-10">
                                <div class="row mb-3 align-items-center">
                                    <div class="col-5">
                                        {{ form_label(groupForm.name, null, {'label': 'Nom du groupe : ', 'label_attr': {'class': 'me-2'}}) }}
                                    </div>
                                    <div class="col-7">
                                        {{ form_widget(groupForm.name, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                <button class="btn btn-primary" type="submit">Ajouter un groupe</button>
                                <a href="{{ path('group_panel') }}" class="btn btn-primary">Retour</a>
                            </div>
                        </div>
                        {{ form_end(groupForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


