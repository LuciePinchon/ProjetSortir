{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}


{% block body %}
    <article class="container mt-5">

        <div class="row">
            <div class="col">
                <h1>Hello world</h1>
            </div>
        </div>

        <div class="smartphone row mt-3">
            <div class="col" id="form">
                {{ form_start(form, {'attr': {'class': 'form-sortie'}}) }}

                <div class="filtres">
                    {{ form_row(form.campus) }}
                    {{ form_row(form.name) }}
                    <div class="date">
                        {{ form_row(form.filterDate) }}
                        {{ form_row(form.filterDateMax) }}
                    </div>

                </div>

                <div class="checkBox">
                    {{ form_row(form.checkboxOrga) }}
                    {{ form_row(form.checkBoxInscrit) }}
                    {{ form_row(form.checkBoxNotInscrit) }}
                    {{ form_row(form.sortiePasse) }}
                </div>

                <button class="btn btn-primary btn-filtre" type="submit">Rechercher</button>

                {{ form_end(form) }}
            </div>
        </div>



        <h2>Sorties :</h2>
        <div class="table-responsive">
            <table class="table">

                <thead>
                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th class="AAfficherSmartphone" scope="col">Lieu</th>
                    <th class="smartphone" scope="col">Clôture</th>
                    <th class="smartphone" scope="col">inscrits/places</th>
                    <th class="smartphone" scope="col">Etat</th>
                    <th class="smartphone" scope="col">Inscrit</th>
                    <th class="smartphone" scope="col">Organisateur</th>
                    <th class="smartphone" scope="col">Actions</th>
                </tr>
                </thead>



                <tbody>
                {% for sortie in sorties %}
                    {% set isUserInscrit = false %}
                    {% for participant in sortie.participant %}
                        {% if participant.id == user.id %}
                            {% set isUserInscrit = true %}
                        {% endif %}
                    {% endfor %}





                    <tr>
                        <td> <a href="{{ path('app_sortie_folder',{'id':sortie.id}) }}" class="AAfficherSmartphone">{{ sortie.name }}</a>  <p class="smartphone">{{ sortie.name }}</p> </td>
                        <td>{{ sortie.startDate | date('d/m/y') }}</td>
                        <td class="AAfficherSmartphone">{{ sortie.lieu.name}}</td>
                        <td class="smartphone">{{ sortie.limiteDateInscription | date('d/m/y') }}</td>
                        <td class="smartphone">{{ sortie.participant|length }}/{{ sortie.maxInscriptionsNumber }}</td>
                        <td class="smartphone">{{ sortieStateService.getEtatObject(sortie).libelle }}</td>
                        <td class="smartphone">{% if isUserInscrit %}X{% endif %}</td>
                        <td class="smartphone">
                            <a href="{{ path('app_user_participant',{'id':sortie.organisateur.id}) }}">{{ sortie.organisateur.firstName }}</a>
                        </td>
                        <td class="smartphone">
                            <a href="{{ path('app_sortie_folder',{'id':sortie.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                             {% if app.user == sortie.organisateur %}
                             <a href="{{ path('app_sortie_modify', {'id': sortie.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                             <a href="{{ path('app_sortie_delete', {'id': sortie.id}) }}" class="btn btn-danger btn-sm">Annuler</a>
                            {% else %}
                            {% endif %}
                            {% if isUserInscrit %}
                                <a href="{{ path('app_sortie_unsubscribe', {'id': sortie.id}) }}" class="btn btn-warning btn-sm">Se désister</a>
                            {% else %}
                                {% if app.user
                                    and sortie.maxInscriptionsNumber > sortie.participant|length
                                    and sortie.limiteDateInscription > date('now')
                                    and app.user not in sortie.participant %}
                                    <a href="{{ path('app_sortie_subscribe', {'id': sortie.id}) }}" class="btn btn-success btn-sm">S'inscrire</a>
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% if sorties is empty %}
            <p class="smartphone alert alert-warning">Aucune sortie n'a été trouvée avec les critères de recherche actuels.</p>
        {% endif %}

        <a href="{{ path('app_sortie_create') }}" class="smartphone btn btn-primary">Ajouter une sortie</a>
    </article>
    
{% endblock %}
