{% extends 'baseNotConnected.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="text-center bold h3 p-4 flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {#        {% if app.user %} #}
        {#            <div class=""> #}
        {#                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a> #}
        {#            </div> #}
        {#        {% endif %} #}


        <div class="alignEmailAndPassword ">
            <div class="emailPass">
                <label for="inputEmail">Email :</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       autocomplete="email" required autofocus>
            </div>
            <div class="emailPass">
                <label for="inputPassword">Password :</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <div class="btnEtRememberMe">
                <div class="checkbox mb-3">
                    <label class="checkAndRememberMe">
                        <label for="remember_me">Remember me</label>
                        <input type="checkbox" name="remember_me" id="remember_me">
                    </label>
                </div>

                <button class="btn btn-lg btn-primary mx-4" type="submit">
                    Sign in
                </button>
            </div>
            <a href="{{ path('app_forgot_password_request') }}" title="reset password" class="text-decoration-none text-black mt-2">Mot de passe oubli√© ?</a>
        </div>
    </form>
    <div>
    </div>

{% endblock %}