<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}S'enregistrer!{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/logo_sortir.png') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
<header class="navBar  ">
    <div class="container">
        <h1 class="navbar-brand w-25"><a href="{{ path('main_home') }}"><img src="{{ asset('img/logo_sortir.png') }}" alt="Logo_Sortir" class="w-50"></a></h1>
        <nav>
            {% include 'inc/nav.html.twig' %}
        </nav>
    </div>
</header>


    <main>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="text-center bold h3 p-4 flash flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h1>Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        <button type="submit" class="btn">Register</button>
        {{ form_end(registrationForm) }}    </main>

    <footer>

    </footer>
</body>
</html>
