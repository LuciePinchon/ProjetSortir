{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block body %}
    <section class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">Ajouter un utilisateur</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(userForm, {'attr': {'class': 'form'}}) }}
                        <div class="add-form">
                            {{ form_widget(userForm, {'attr': {'class': 'mb-3'}}) }}
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">Ajouter un utilisateur</button>
                        </div>
                        {{ form_end(userForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
