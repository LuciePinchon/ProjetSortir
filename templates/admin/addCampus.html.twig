{% extends 'base.html.twig' %}

{% block title %}Ajouter un campus{% endblock %}

{% block body %}
    <section class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">Ajouter un campus</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(campusForm, {'attr': {'class': 'form'}}) }}
                        <div class="add-form">
                            {{ form_widget(campusForm, {'attr': {'class': 'mb-3'}}) }}
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">Ajouter un campus</button>
                        </div>
                        {{ form_end(campusForm) }}
                    </div>
                </div>

                <div class="card mt-5">
                    <div class="card-body">
                        <div class="table-responsive">

                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">Campus</th>
                                    <th scope="col">Manage</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for campus in campuss %}
                                    {% if campus.id %}
                                    <tr>
                                        <td> {{ campus.name}} </td>
                                        <td><a href="{{ path('campus-delete', {'id': campus.id}) }}" title="Supprimer un campus" class="text-decoration-none text-dark mx-3"><img
                                                        src="{{ asset('img/Management/xmark.png') }}" style="width: 10px" class="img-fluid" alt="X"></a></td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
