{% extends 'baseNotConnected.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header bg-dark text-white">
                        <h1 class="card-title text-center mb-0">Réinitialiser votre mot de passe</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(resetForm, {'action': path('app_reset_password')}) }}
                        {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Nouveau mot de passe'}}) }}
                        <button class="btn btn-primary mt-3">Réinitialiser le mot de passe</button>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}