{% extends 'baseNotConnected.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-dark text-black mt-5">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Réinitialiser votre mot de passe</h1>
                        {{ form_start(requestForm) }}
                        <div class="mb-3">
                            {{ form_row(requestForm.email, {'label': 'Adresse e-mail', 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <small class="mb-3 mt-3">
                            Entrez votre adresse e-mail, et nous vous enverrons un
                            lien pour réinitialiser votre mot de passe.
                        </small>
                        <div class="d-grid gap-2 mt-3">
                            <button class="btn btn-primary" type="submit">Envoyer l'e-mail de réinitialisation du mot de passe</button>
                        </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}